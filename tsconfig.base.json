{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@drivingo/auth": ["feat-auth/src/index.ts"],
      "@drivingo/data": ["data/src/index.ts"],
      "@drivingo/data-provider": ["data-provider/src/index.ts"],
      "@drivingo/db-client": ["db-client/src/index.ts"],
      "@drivingo/feat-hazard-perception": [
        "feat-hazard-perception/src/index.ts"
      ],
      "@drivingo/feat-highway-code": ["feat-highway-code/src/index.ts"],
      "@drivingo/feat-traffic-signs": ["feat-traffic-signs/src/index.ts"],
      "@drivingo/global": ["global/src/index.ts"],
      "@drivingo/models": ["models/src/index.ts"],
      "@drivingo/store": ["store/src/index.ts"],
      "@drivingo/subscription": ["feat-subscription/src/index.ts"],
      "@drivingo/test": ["feat-test/src/index.ts"],
      "@drivingo/ui": ["ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
